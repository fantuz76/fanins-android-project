<?xml version="1.0" encoding="utf-8"?>

<!--
     android:versionCode = intero  che si incrementa di uno ogni volta che si vuole differenziare
	 android:versionName = stringa che identifica la versione così come presentata all'utente ex 2.3.4
-->
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fant.fanins"
    android:configChanges="keyboardHidden|orientation|screenSize"
    android:versionCode="8"
    android:versionName="1.7.7" >

    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_money"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <!--
        questo meta-data qua sotto l'ho dovuto aggiungere altrimenti andava in errore l'upload su google drive 
        da quando sono passato a Android 4.4
        In realtà è probabilmente dovuto all'upgrade di google play alla versione 13. 
        http://stackoverflow.com/questions/19724113/google-play-services-update
        http://stackoverflow.com/questions/19723811/after-google-play-service-update-to-version-13-i-got-an-error
        http://stackoverflow.com/questions/19724547/google-services-added-force-close-application-with-log-cat-error 
        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name="com.fant.fanins.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/android:Theme.Holo" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.dropbox.client2.android.AuthActivity"
            android:configChanges="orientation|keyboard"
            android:launchMode="singleTask" >
            <intent-filter>

                <!-- Change this to be db- followed by your app key -->
                <data android:scheme="db-7dlkc5hdc0cvk82" />

                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.fant.fanins.ReadTxtActivity"
            android:label="@string/title_activity_read_DB"
            android:theme="@style/android:Theme.Holo" >
        </activity>
        <activity
            android:name="com.fant.fanins.MySettings"
            android:label="@string/title_activity_MySettings"
            android:theme="@style/android:Theme.Holo" >
        </activity>
        <activity
            android:name="com.fant.fanins.SyncDBActivity"
            android:label="@string/title_activity_SyncDB" >
        </activity>
        <activity
            android:name="com.fant.fanins.ModifyDataActivity"
            android:label="@string/title_activity_ModifyData"
            android:theme="@style/android:Theme.Holo" >
        </activity>
        <activity
            android:name="com.fant.fanins.ReportActivity"
            android:label="@string/title_activity_report"
            android:theme="@style/android:Theme.Holo" >
        </activity>
        <activity
            android:name="org.achartengine.GraphicalActivity"
            android:theme="@style/android:Theme.Holo" />
    </application>

</manifest>